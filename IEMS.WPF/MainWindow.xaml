<Window x:Class="IEMS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IEMS - School Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Background="DarkBlue" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Image Source="../School_logo.png" Width="60" Height="60" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="IEMS School Management System"
                               FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Dashboard"
                               FontSize="14" Foreground="LightBlue" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Column="2" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dddd, MMMM dd, yyyy'}"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       FontSize="12" Foreground="LightGray" VerticalAlignment="Center" Margin="0,0,20,0"/>
        </Grid>

        <!-- Dashboard Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Section -->
                <TextBlock Grid.Row="0" Text="Welcome to IEMS Dashboard"
                           FontSize="28" FontWeight="Bold" Margin="0,10,0,30"
                           HorizontalAlignment="Center" Foreground="#2C3E50"/>

                <!-- Dashboard Cards -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Students Management Card -->
                    <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="10"
                            Margin="10" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="8" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#3498DB" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="ðŸ‘¥" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Students Management" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock Text="Manage students, classes and academic records" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnStudentsModule" Content="View Students"
                                        Background="#3498DB" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnStudentsModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                                <Button x:Name="btnClassesModule" Content="View Classes"
                                        Background="#2ECC71" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnClassesModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Transport Management Card -->
                    <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="10"
                            Margin="10" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="8" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#E67E22" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="ðŸšŒ" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Transport Management" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock Text="Manage buses, routes and student transport" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnBusesModule" Content="Buses"
                                        Background="#E67E22" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnBusesModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                                <Button x:Name="btnRoutesModule" Content="Routes"
                                        Background="#D35400" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnRoutesModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Staff Management Card -->
                    <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="10"
                            Margin="10" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="8" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#9B59B6" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="ðŸ‘¨â€ðŸ«" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Staff Management" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock Text="Manage teachers, drivers, and support staff" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnTeachersModule" Content="Teachers"
                                        Background="#9B59B6" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnTeachersModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                                <Button x:Name="btnSupportStaffModule" Content="Support Staff"
                                        Background="#8E44AD" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnSupportStaffModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Expense Management Card -->
                    <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="10"
                            Margin="10" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="8" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#E74C3C" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="ðŸ’°" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Expense Management" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock Text="Track finances, fees and expenditures" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnFeesModule" Content="Student Fees"
                                        Background="#E74C3C" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnFeesModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                                <Button x:Name="btnExpensesModule" Content="Expenses"
                                        Background="#C0392B" Foreground="White" BorderThickness="0"
                                        Height="35" Margin="5" Click="BtnExpensesModule_Click"
                                        Style="{DynamicResource ModernButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="30" Background="#34495E">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Dashboard Ready" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

    <!-- Resources for Modern Button Style -->
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
</Window>