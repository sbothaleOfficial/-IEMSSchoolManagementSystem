<Window x:Class="IEMS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IEMS - School Management System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="DarkBlue" Orientation="Horizontal" Height="60">
            <Image Source="../School_logo.png" Width="50" Height="50" Margin="10,5,10,5"/>
            <TextBlock Text="IEMS - School Management System"
                       FontSize="20" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Students">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">
                        <Button x:Name="btnAddStudent" Content="Add Student" Width="100" Height="30" Margin="0,0,10,0" Click="BtnAddStudent_Click"/>
                        <Button x:Name="btnEditStudent" Content="Edit Student" Width="100" Height="30" Margin="0,0,10,0" Click="BtnEditStudent_Click"/>
                        <Button x:Name="btnDeleteStudent" Content="Delete Student" Width="100" Height="30" Margin="0,0,10,0" Click="BtnDeleteStudent_Click"/>
                        <Button x:Name="btnRefreshStudents" Content="Refresh" Width="100" Height="30" Margin="0,0,10,0" Click="BtnRefreshStudents_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="dgStudents" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Roll Number" Binding="{Binding RollNumber}" Width="100"/>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="120"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Date of Birth" Binding="{Binding DateOfBirth, StringFormat=yyyy-MM-dd}" Width="120"/>
                            <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Classes">
                <Grid>
                    <TextBlock Text="Classes management coming soon..."
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="Gray"/>
                </Grid>
            </TabItem>

            <TabItem Header="Teachers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">
                        <Button x:Name="btnAddTeacher" Content="Add Teacher" Width="100" Height="30" Margin="0,0,10,0" Click="BtnAddTeacher_Click"/>
                        <Button x:Name="btnEditTeacher" Content="Edit Teacher" Width="100" Height="30" Margin="0,0,10,0" Click="BtnEditTeacher_Click"/>
                        <Button x:Name="btnDeleteTeacher" Content="Delete Teacher" Width="100" Height="30" Margin="0,0,10,0" Click="BtnDeleteTeacher_Click"/>
                        <Button x:Name="btnRefreshTeachers" Content="Refresh" Width="100" Height="30" Margin="0,0,10,0" Click="BtnRefreshTeachers_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="dgTeachers" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="120"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="150"/>
                            <DataGridTextColumn Header="Classes" Binding="{Binding ClassCount}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>