<Window x:Class="IEMS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IEMS - School Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Image Source="../School_logo.png" Width="60" Height="60" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="IEMS School Management System"
                               FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextOnPrimaryBrush}"/>
                    <TextBlock Text="Dashboard"
                               FontSize="14" Foreground="{StaticResource PrimaryLightBrush}" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Column="2" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dddd, MMMM dd, yyyy'}"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       FontSize="12" Foreground="{StaticResource TextOnPrimaryBrush}" Opacity="0.9" VerticalAlignment="Center" Margin="0,0,20,0"/>
        </Grid>

        <!-- Dashboard Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20" Background="{StaticResource SurfaceBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Section -->
                <TextBlock Grid.Row="0" Text="Welcome to IEMS Dashboard"
                           FontSize="28" FontWeight="Bold" Margin="0,10,0,30"
                           HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>

                <!-- Dashboard Cards -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Students Management Card -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="👥" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Students Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage students, classes and academic records" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnStudentsModule" Content="View Students"
                                        Height="35" Margin="5" Click="BtnStudentsModule_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button x:Name="btnClassesModule" Content="View Classes"
                                        Height="35" Margin="5" Click="BtnClassesModule_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Transport Management Card -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="🚌" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Transport Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage buses, routes and student transport" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnBusesModule" Content="Buses"
                                        Height="35" Margin="5" Click="BtnBusesModule_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button x:Name="btnRoutesModule" Content="Routes"
                                        Height="35" Margin="5" Click="BtnRoutesModule_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Staff Management Card -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="👨‍🏫" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Staff Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage teachers, drivers, and support staff" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnTeachersModule" Content="Teachers"
                                        Height="35" Margin="5" Click="BtnTeachersModule_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button x:Name="btnSupportStaffModule" Content="Support Staff"
                                        Height="35" Margin="5" Click="BtnSupportStaffModule_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Expense Management Card -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="💰" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Expense Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Track finances, fees and expenditures" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <UniformGrid Columns="2" Margin="0,20,0,0">
                                <Button x:Name="btnFeesModule" Content="Student Fees"
                                        Height="35" Margin="5" Click="BtnFeesModule_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button x:Name="btnExpensesModule" Content="Expenses"
                                        Height="35" Margin="5" Click="BtnExpensesModule_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="30" Background="{StaticResource SecondaryDarkBrush}">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Dashboard Ready" Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

    <!-- Window Resources -->
    <Window.Resources>
        <!-- Local resources if needed -->
    </Window.Resources>
</Window>