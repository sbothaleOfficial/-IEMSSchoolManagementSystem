<Window x:Class="IEMS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IEMS - School Management System" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen" Icon="New_round_logo_new_color.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Image Source="Exact_color_logo.png" Width="90" Height="90" Margin="0,0,15,0"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased"
                       Stretch="Uniform"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Inspire English Medium School, Mardi"
                               FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextOnPrimaryBrush}"/>
                    <TextBlock Text="Tah. Maregaon, Dist. Yavatmal (Maharashtra) – 445303"
                               FontSize="12" Foreground="{StaticResource PrimaryLightBrush}" Margin="0,2,0,2"/>
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="U-Dise Code : 27140806704"
                                   FontSize="11" Foreground="{StaticResource PrimaryLightBrush}"/>
                        <TextBlock Grid.Column="2" Text="School Reg. No. MH-15381/16"
                                   FontSize="11" Foreground="{StaticResource PrimaryLightBrush}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dddd, MMMM dd, yyyy'}"
                           xmlns:sys="clr-namespace:System;assembly=mscorlib"
                           FontSize="12" Foreground="{StaticResource TextOnPrimaryBrush}" Opacity="0.9" HorizontalAlignment="Right"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock x:Name="txtWelcomeUser" Text="Welcome, Admin" FontSize="11"
                               Foreground="{StaticResource PrimaryLightBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button x:Name="btnLogout" Content="🚪 Logout" Click="BtnLogout_Click"
                            Background="Transparent" BorderBrush="{StaticResource TextOnPrimaryBrush}"
                            Foreground="{StaticResource TextOnPrimaryBrush}"
                            BorderThickness="1" Padding="10,5" FontSize="11" Cursor="Hand"
                            Height="28" Width="80">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource TextOnPrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Dashboard Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20" Background="{StaticResource SurfaceBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Section -->
                <TextBlock Grid.Row="0" Text="Welcome to IEMS Dashboard"
                           FontSize="28" FontWeight="Bold" Margin="0,10,0,30"
                           HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>

                <!-- Dashboard Cards -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Students Management Card -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="👥" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Students Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage students, classes and academic records" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnStudentManagement" Content="Manage Students"
                                    Height="40" Margin="0,20,0,0" Click="BtnStudentManagement_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Transport Management Card -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="🚌" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Transport Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage buses, routes and student transport" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnTransportManagement" Content="Manage Transport"
                                    Height="40" Margin="0,20,0,0" Click="BtnTransportManagement_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Staff Management Card -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="👨‍🏫" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Staff Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage teachers, drivers, and support staff" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnStaffManagement" Content="Manage Staff"
                                    Height="40" Margin="0,20,0,0" Click="BtnStaffManagement_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Finance Management Card -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="💰" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Finance Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Track finances, fees and expenditures" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnFinanceManagement" Content="Manage Finance"
                                    Height="40" Margin="0,20,0,0" Click="BtnFinanceManagement_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Database Backup & Restore Card -->
                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="💾" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Backup &amp; Restore" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Backup your data to Google Drive or restore from backup" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnBackupRestore" Content="Manage Backups"
                                    Height="40" Margin="0,20,0,0" Click="BtnBackupRestore_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- System Settings Card (Optional for future use) -->
                    <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="⚙️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="System Settings" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Configure system settings and preferences" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnSystemSettings" Content="System Settings"
                                    Height="40" Margin="0,20,0,0"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold" IsEnabled="True"
                                    Click="BtnSystemSettings_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- User Management Card (Admin Only) -->
                    <Border x:Name="cardUserManagement" Grid.Row="3" Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="6" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                                    <TextBlock Text="👥" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="User Management" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage system users, roles and permissions" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnUserManagement" Content="Manage Users"
                                    Height="40" Margin="0,20,0,0"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    FontSize="14" FontWeight="SemiBold"
                                    Click="BtnUserManagement_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="30" Background="{StaticResource SecondaryDarkBrush}">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Dashboard Ready" Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

    <!-- Window Resources -->
    <Window.Resources>
        <!-- Local resources if needed -->
    </Window.Resources>
</Window>