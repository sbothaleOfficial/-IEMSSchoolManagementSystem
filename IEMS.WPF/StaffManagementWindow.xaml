<Window x:Class="IEMS.WPF.StaffManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Management System" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Button x:Name="btnBack" Content="â† Back"
                        Click="BtnBack_Click"
                        Background="White" Foreground="Black" BorderBrush="#CCCCCC" BorderThickness="1"
                        Width="100" Height="35" Margin="0,0,20,0" FontWeight="SemiBold"/>
                <TextBlock Text="Staff" FontSize="20" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="{StaticResource TextOnPrimaryBrush}"/>
                <TextBlock Text="Management System"
                           FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextOnPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="20" FontSize="14">
            <!-- Teachers Tab -->
            <TabItem Header="Teachers" FontSize="14" Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnAddTeacher" Content="Add Teacher" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnAddTeacher_Click" Style="{StaticResource SuccessButtonStyle}"/>
                            <Button x:Name="btnEditTeacher" Content="Edit Teacher" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnEditTeacher_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button x:Name="btnDeleteTeacher" Content="Delete Teacher" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnDeleteTeacher_Click" Style="{StaticResource DangerButtonStyle}"/>
                            <Button x:Name="btnRefreshTeachers" Content="Refresh" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnRefreshTeachers_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>

                        <!-- Search Section -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                            <TextBox x:Name="txtSearchTeacher" Width="250" Height="35"
                                     VerticalContentAlignment="Center"
                                     TextChanged="TxtSearchTeacher_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Button x:Name="btnClearTeacherSearch" Content="Clear" Width="100" Height="35" Margin="10,0,0,0"
                                    Click="BtnClearTeacherSearch_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="dgTeachers" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column" AlternatingRowBackground="{StaticResource SurfaceBrush}"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                            <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="120"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="180"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Joining Date" Binding="{Binding JoiningDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Monthly Salary" Binding="{Binding MonthlySalary, StringFormat=â‚¹{0:N0}}" Width="120"/>
                            <DataGridTextColumn Header="Bank Account" Binding="{Binding BankAccountNumber}" Width="140"/>
                            <DataGridTextColumn Header="Aadhar Number" Binding="{Binding AadharNumber}" Width="140"/>
                            <DataGridTextColumn Header="PAN Number" Binding="{Binding PANNumber}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Other Staff Tab -->
            <TabItem Header="Other Staff" FontSize="14" Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnAddStaff" Content="Add Staff" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnAddStaff_Click" Style="{StaticResource SuccessButtonStyle}"/>
                            <Button x:Name="btnEditStaff" Content="Edit Staff" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnEditStaff_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button x:Name="btnDeleteStaff" Content="Delete Staff" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnDeleteStaff_Click" Style="{StaticResource DangerButtonStyle}"/>
                            <Button x:Name="btnRefreshStaff" Content="Refresh" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnRefreshStaff_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>

                        <!-- Search Section -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                            <ComboBox x:Name="cmbStaffPosition" Width="150" Height="35" Margin="0,0,10,0"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="CmbStaffPosition_SelectionChanged">
                                <ComboBoxItem Content="All Positions"/>
                                <ComboBoxItem Content="Driver"/>
                                <ComboBoxItem Content="Peon"/>
                                <ComboBoxItem Content="Clerk"/>
                                <ComboBoxItem Content="Accountant"/>
                                <ComboBoxItem Content="Administrator"/>
                                <ComboBoxItem Content="Librarian"/>
                                <ComboBoxItem Content="Lab Assistant"/>
                                <ComboBoxItem Content="Security Guard"/>
                            </ComboBox>
                            <TextBox x:Name="txtSearchStaff" Width="250" Height="35"
                                     VerticalContentAlignment="Center"
                                     TextChanged="TxtSearchStaff_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Button x:Name="btnClearStaffSearch" Content="Clear" Width="100" Height="35" Margin="10,0,0,0"
                                    Click="BtnClearStaffSearch_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="dgStaff" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column" AlternatingRowBackground="{StaticResource SurfaceBrush}"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                            <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="120"/>
                            <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="120"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="180"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Joining Date" Binding="{Binding JoiningDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Monthly Salary" Binding="{Binding MonthlySalary, StringFormat=â‚¹{0:N0}}" Width="120"/>
                            <DataGridTextColumn Header="Bank Account" Binding="{Binding BankAccountNumber}" Width="140"/>
                            <DataGridTextColumn Header="Aadhar Number" Binding="{Binding AadharNumber}" Width="140"/>
                            <DataGridTextColumn Header="PAN Number" Binding="{Binding PANNumber}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Payslip Generation Tab -->
            <TabItem Header="Payslip Generation" FontSize="14" Padding="15,10">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Employee Payslip Generator"
                               FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                               Foreground="#2C3E50" Margin="0,0,0,20"/>

                    <!-- Payslip Form and Preview -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel - Employee Selection and Salary Details -->
                        <Border Grid.Column="0" Background="#F8F9FA" Padding="20" Margin="0,0,20,0">
                            <StackPanel>
                                <TextBlock Text="Employee Selection" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                                <!-- Employee Selection -->
                                <TextBlock Text="Select Employee:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbEmployee" Height="35" Margin="0,0,0,15"
                                          DisplayMemberPath="FullName" SelectedValuePath="Id"
                                          SelectionChanged="CmbEmployee_SelectionChanged"/>

                                <!-- Month/Year Selection -->
                                <TextBlock Text="Payslip Month:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="cmbMonth" Grid.Column="0" Height="35" Margin="0,0,5,0">
                                        <ComboBoxItem Content="January" Tag="1"/>
                                        <ComboBoxItem Content="February" Tag="2"/>
                                        <ComboBoxItem Content="March" Tag="3"/>
                                        <ComboBoxItem Content="April" Tag="4"/>
                                        <ComboBoxItem Content="May" Tag="5"/>
                                        <ComboBoxItem Content="June" Tag="6"/>
                                        <ComboBoxItem Content="July" Tag="7"/>
                                        <ComboBoxItem Content="August" Tag="8"/>
                                        <ComboBoxItem Content="September" Tag="9"/>
                                        <ComboBoxItem Content="October" Tag="10"/>
                                        <ComboBoxItem Content="November" Tag="11"/>
                                        <ComboBoxItem Content="December" Tag="12"/>
                                    </ComboBox>
                                    <ComboBox x:Name="cmbYear" Grid.Column="1" Height="35" Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Salary Details -->
                                <TextBlock Text="Salary Details" FontSize="16" FontWeight="Bold" Margin="0,15,0,15"/>

                                <TextBlock Text="Basic Salary:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtBasicSalary" Height="35" Margin="0,0,0,10"
                                         VerticalContentAlignment="Center" Text="â‚¹0"
                                         TextChanged="TxtBasicSalary_TextChanged"/>

                                <TextBlock Text="Advance Salary:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtAdvanceSalary" Height="35" Margin="0,0,0,10"
                                         VerticalContentAlignment="Center" Text="0"
                                         TextChanged="TxtAdvanceSalary_TextChanged"/>

                                <TextBlock Text="Loan Deduction:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtLoanDeduction" Height="35" Margin="0,0,0,15"
                                         VerticalContentAlignment="Center" Text="0"
                                         TextChanged="TxtLoanDeduction_TextChanged"/>

                                <!-- Net Salary Display -->
                                <Border Background="#E8F5E8" Padding="10" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="Net Salary:" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock x:Name="lblNetSalary" Text="â‚¹0" FontSize="18" FontWeight="Bold"
                                                   Foreground="#27AE60"/>
                                    </StackPanel>
                                </Border>

                                <!-- Generate Button -->
                                <Button x:Name="btnGeneratePayslip" Content="Generate Payslip" Height="35"
                                        Background="#3498DB" Foreground="White" FontWeight="Bold"
                                        Click="BtnGeneratePayslip_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Right Panel - Payslip Preview (A4 Size: 794x1122 pixels at 96 DPI) -->
                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <Border x:Name="PayslipBorder" Background="White" BorderBrush="#34495E"
                                    BorderThickness="2" Padding="40" Width="794">
                                <StackPanel x:Name="PayslipContent">
                                    <!-- School Header -->
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- School Logo -->
                                        <Border Grid.Column="0" Width="80" Height="80"
                                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                                Margin="0,0,15,0" BorderBrush="Black" BorderThickness="1">
                                            <Viewbox Stretch="Uniform">
                                                <Image Source="Exact_color_logo.png" Stretch="Uniform"/>
                                            </Viewbox>
                                        </Border>

                                        <!-- School Details -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="INSPIRE ENGLISH MEDIUM SCHOOL, MARDI"
                                                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Tah. Maregaon, Dist. Yavatmal (Maharashtra) â€“ 445303"
                                                       FontSize="12" HorizontalAlignment="Center" Margin="0,3"/>
                                            <TextBlock Text="U-Dise Code : 27140806704 | School Reg. No. MH-15381/16"
                                                       FontSize="10" HorizontalAlignment="Center" Margin="0,3"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Separator Line -->
                                    <Border Height="2" Background="#34495E" Margin="0,0,0,15"/>

                                    <!-- Payslip Title -->
                                    <TextBlock Text="SALARY SLIP" FontSize="20" FontWeight="Bold"
                                               HorizontalAlignment="Center" Margin="0,0,0,20"/>

                                    <!-- Employee and Payslip Details -->
                                    <Grid Margin="0,0,0,25">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Left Side - Employee Details -->
                                        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="13" Margin="0,3">
                                                <Run Text="Employee Name: "/>
                                                <Run x:Name="PayslipEmployeeName" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="13" Margin="0,3">
                                                <Run Text="Employee ID: "/>
                                                <Run x:Name="PayslipEmployeeId" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="13" Margin="0,3">
                                                <Run Text="Position: "/>
                                                <Run x:Name="PayslipPosition" FontWeight="Bold"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Right Side - Dates -->
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock FontSize="13" Margin="0,3" HorizontalAlignment="Right">
                                                <Run Text="Pay Period: "/>
                                                <Run x:Name="PayslipPeriod" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="13" Margin="0,3" HorizontalAlignment="Right">
                                                <Run Text="Generated Date: "/>
                                                <Run x:Name="PayslipGeneratedDate" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="13" Margin="0,3" HorizontalAlignment="Right">
                                                <Run Text="Joining Date: "/>
                                                <Run x:Name="PayslipJoiningDate" FontWeight="Bold"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Salary Breakdown Table -->
                                    <Border BorderBrush="#34495E" BorderThickness="1" Margin="0,0,0,20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Header -->
                                            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#34495E" Padding="10">
                                                <TextBlock Text="SALARY BREAKDOWN" FontWeight="Bold" FontSize="14"
                                                           Foreground="White" HorizontalAlignment="Center"/>
                                            </Border>

                                            <!-- Basic Salary -->
                                            <Border Grid.Row="1" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0,0,1,1" Padding="10">
                                                <TextBlock Text="Basic Salary" FontSize="12"/>
                                            </Border>
                                            <Border Grid.Row="1" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10">
                                                <TextBlock x:Name="PayslipBasicSalary" Text="â‚¹0" FontSize="12" FontWeight="Bold"/>
                                            </Border>

                                            <!-- Advance Salary -->
                                            <Border Grid.Row="2" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0,0,1,1" Padding="10">
                                                <TextBlock Text="Less: Advance Salary" FontSize="12" Foreground="#E74C3C"/>
                                            </Border>
                                            <Border Grid.Row="2" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10">
                                                <TextBlock x:Name="PayslipAdvanceSalary" Text="â‚¹0" FontSize="12" FontWeight="Bold" Foreground="#E74C3C"/>
                                            </Border>

                                            <!-- Loan Deduction -->
                                            <Border Grid.Row="3" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0,0,1,1" Padding="10">
                                                <TextBlock Text="Less: Loan Deduction" FontSize="12" Foreground="#E74C3C"/>
                                            </Border>
                                            <Border Grid.Row="3" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10">
                                                <TextBlock x:Name="PayslipLoanDeduction" Text="â‚¹0" FontSize="12" FontWeight="Bold" Foreground="#E74C3C"/>
                                            </Border>

                                            <!-- Total Deductions -->
                                            <Border Grid.Row="4" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0,0,1,1" Padding="10" Background="#F8F9FA">
                                                <TextBlock Text="Total Deductions" FontSize="12" FontWeight="SemiBold"/>
                                            </Border>
                                            <Border Grid.Row="4" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10" Background="#F8F9FA">
                                                <TextBlock x:Name="PayslipTotalDeductions" Text="â‚¹0" FontSize="12" FontWeight="Bold"/>
                                            </Border>

                                            <!-- Net Salary -->
                                            <Border Grid.Row="5" Grid.Column="0" BorderBrush="#34495E" BorderThickness="0,0,1,0" Padding="10" Background="#E8F5E8">
                                                <TextBlock Text="NET SALARY" FontSize="14" FontWeight="Bold"/>
                                            </Border>
                                            <Border Grid.Row="5" Grid.Column="1" Padding="10" Background="#E8F5E8">
                                                <TextBlock x:Name="PayslipNetSalary" Text="â‚¹0" FontSize="14" FontWeight="Bold" Foreground="#27AE60"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Footer -->
                                    <Grid Margin="0,30,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Generated by: Admin" FontSize="10" Margin="0,0,0,30"/>
                                            <TextBlock Text="This is a computer generated payslip" FontSize="8" FontStyle="Italic"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock Text="Authorized Signature" FontSize="10" FontWeight="Bold"
                                                       HorizontalAlignment="Right" Margin="0,40,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </ScrollViewer>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <Button x:Name="btnPrintPayslip" Content="Print Payslip" Width="130" Height="35"
                                Margin="0,0,10,0" Background="#27AE60" Foreground="White"
                                FontWeight="Bold" Click="BtnPrintPayslip_Click"/>
                        <Button x:Name="btnClearPayslip" Content="Clear" Width="100" Height="35"
                                Margin="10,0,0,0" Background="#95A5A6" Foreground="White"
                                FontWeight="Bold" Click="BtnClearPayslip_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard" FontSize="14" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Staff Management Dashboard" FontSize="20" FontWeight="Bold"
                                   Margin="0,0,0,20" HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryBrush}"/>

                        <!-- Overall Statistics Cards -->
                        <Grid Grid.Row="1" Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Teachers Card -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" Background="{StaticResource SuccessBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸŽ“" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalTeachers" Text="0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Total Teachers" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Support Staff Card -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0" Background="{StaticResource InfoBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ‘”" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalSupportStaff" Text="0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Support Staff" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Staff Card -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0" Background="{StaticResource PrimaryBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ‘¥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalStaff" Text="0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Total Staff" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Monthly Salary Card -->
                            <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="5,0" Background="{StaticResource WarningBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ’°" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalMonthlySalary" Text="â‚¹0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Monthly Salary" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Spent Till Today Card -->
                            <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="10,0,0,0" Background="{StaticResource DangerBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalSpentTillToday" Text="â‚¹0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
