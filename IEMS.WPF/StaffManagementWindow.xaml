<Window x:Class="IEMS.WPF.StaffManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Management System" Height="700" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="{StaticResource PrimaryBrush}" Orientation="Horizontal" Height="60">
            <TextBlock Text="ðŸ‘¥" FontSize="26" Margin="20,0" VerticalAlignment="Center"/>
            <TextBlock Text="Staff Management System"
                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextOnPrimaryBrush}"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="20" FontSize="14">
            <!-- Teachers Tab -->
            <TabItem Header="ðŸ‘¨â€ðŸ« Teachers" FontSize="16" Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnAddTeacher" Content="Add Teacher" Width="120" Height="35" Margin="0,0,10,0"
                                    Click="BtnAddTeacher_Click" Style="{StaticResource SuccessButtonStyle}"/>
                            <Button x:Name="btnEditTeacher" Content="Edit Teacher" Width="120" Height="35" Margin="0,0,10,0"
                                    Click="BtnEditTeacher_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button x:Name="btnDeleteTeacher" Content="Delete Teacher" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnDeleteTeacher_Click" Style="{StaticResource DangerButtonStyle}"/>
                            <Button x:Name="btnRefreshTeachers" Content="Refresh" Width="100" Height="35" Margin="0,0,10,0"
                                    Click="BtnRefreshTeachers_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>

                        <!-- Search Section -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="ðŸ” Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                            <TextBox x:Name="txtSearchTeacher" Width="250" Height="35"
                                     VerticalContentAlignment="Center"
                                     TextChanged="TxtSearchTeacher_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Button x:Name="btnClearTeacherSearch" Content="Clear" Width="60" Height="35" Margin="10,0,0,0"
                                    Click="BtnClearTeacherSearch_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="dgTeachers" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="Column" AlternatingRowBackground="{StaticResource SurfaceBrush}"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                            <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="120"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="180"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Joining Date" Binding="{Binding JoiningDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Monthly Salary" Binding="{Binding MonthlySalary, StringFormat=â‚¹{0:N0}}" Width="120"/>
                            <DataGridTextColumn Header="Bank Account" Binding="{Binding BankAccountNumber}" Width="140"/>
                            <DataGridTextColumn Header="Aadhar Number" Binding="{Binding AadharNumber}" Width="140"/>
                            <DataGridTextColumn Header="PAN Number" Binding="{Binding PANNumber}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Other Staff Tab -->
            <TabItem Header="ðŸ‘¨â€ðŸ’¼ Other Staff" FontSize="16" Padding="15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnAddStaff" Content="Add Staff" Width="120" Height="35" Margin="0,0,10,0"
                                    Click="BtnAddStaff_Click" Style="{StaticResource SuccessButtonStyle}"/>
                            <Button x:Name="btnEditStaff" Content="Edit Staff" Width="120" Height="35" Margin="0,0,10,0"
                                    Click="BtnEditStaff_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button x:Name="btnDeleteStaff" Content="Delete Staff" Width="130" Height="35" Margin="0,0,10,0"
                                    Click="BtnDeleteStaff_Click" Style="{StaticResource DangerButtonStyle}"/>
                            <Button x:Name="btnRefreshStaff" Content="Refresh" Width="100" Height="35" Margin="0,0,10,0"
                                    Click="BtnRefreshStaff_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>

                        <!-- Search Section -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="ðŸ” Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                            <ComboBox x:Name="cmbStaffPosition" Width="150" Height="35" Margin="0,0,10,0"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="CmbStaffPosition_SelectionChanged">
                                <ComboBoxItem Content="All Positions"/>
                                <ComboBoxItem Content="Driver"/>
                                <ComboBoxItem Content="Peon"/>
                                <ComboBoxItem Content="Clerk"/>
                                <ComboBoxItem Content="Accountant"/>
                                <ComboBoxItem Content="Administrator"/>
                                <ComboBoxItem Content="Librarian"/>
                                <ComboBoxItem Content="Lab Assistant"/>
                                <ComboBoxItem Content="Security Guard"/>
                            </ComboBox>
                            <TextBox x:Name="txtSearchStaff" Width="250" Height="35"
                                     VerticalContentAlignment="Center"
                                     TextChanged="TxtSearchStaff_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Button x:Name="btnClearStaffSearch" Content="Clear" Width="60" Height="35" Margin="10,0,0,0"
                                    Click="BtnClearStaffSearch_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="dgStaff" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="Column" AlternatingRowBackground="{StaticResource SurfaceBrush}"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                            <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="120"/>
                            <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="120"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="180"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Joining Date" Binding="{Binding JoiningDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Monthly Salary" Binding="{Binding MonthlySalary, StringFormat=â‚¹{0:N0}}" Width="120"/>
                            <DataGridTextColumn Header="Bank Account" Binding="{Binding BankAccountNumber}" Width="140"/>
                            <DataGridTextColumn Header="Aadhar Number" Binding="{Binding AadharNumber}" Width="140"/>
                            <DataGridTextColumn Header="PAN Number" Binding="{Binding PANNumber}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Dashboard Tab -->
            <TabItem Header="ðŸ“Š Dashboard" FontSize="16" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Staff Management Dashboard" FontSize="20" FontWeight="Bold"
                                   Margin="0,0,0,20" HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryBrush}"/>

                        <!-- Overall Statistics Cards -->
                        <Grid Grid.Row="1" Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Teachers Card -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" Background="{StaticResource SuccessBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸŽ“" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalTeachers" Text="0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Total Teachers" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Support Staff Card -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0" Background="{StaticResource InfoBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ‘”" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalSupportStaff" Text="0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Support Staff" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Staff Card -->
                            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0" Background="{StaticResource PrimaryBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ‘¥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblTotalStaff" Text="0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Total Staff" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Average Salary Card -->
                            <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,0" Background="{StaticResource WarningBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                    <TextBlock Text="ðŸ’°" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="lblAverageSalary" Text="â‚¹0" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Avg. Salary" FontSize="12" HorizontalAlignment="Center"
                                               Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Teachers with Classes Statistics -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,25">
                            <TextBlock Text="ðŸŽ“ Teachers &amp; Classes" FontSize="14" FontWeight="Bold"
                                       Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <DataGrid x:Name="dgTeacherClassStats" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                                      GridLinesVisibility="Horizontal" BorderThickness="0" Background="Transparent"
                                      RowBackground="Transparent" AlternatingRowBackground="#F8F9FA" MaxHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="200"/>
                                    <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="120"/>
                                    <DataGridTextColumn Header="Classes Assigned" Binding="{Binding ClassCount}" Width="130"/>
                                    <DataGridTextColumn Header="Classes" Binding="{Binding ClassNames}" Width="300"/>
                                    <DataGridTextColumn Header="Monthly Salary" Binding="{Binding FormattedSalary}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Position-wise Breakdown -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,25">
                            <TextBlock Text="ðŸ“‹ Position-wise Breakdown" FontSize="14" FontWeight="Bold"
                                       Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <DataGrid x:Name="dgPositionStats" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                                      GridLinesVisibility="Horizontal" BorderThickness="0" Background="Transparent"
                                      RowBackground="Transparent" AlternatingRowBackground="#F8F9FA">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="150"/>
                                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80"/>
                                    <DataGridTextColumn Header="Avg. Salary" Binding="{Binding FormattedAvgSalary}" Width="120"/>
                                    <DataGridTextColumn Header="Total Salary" Binding="{Binding FormattedTotalSalary}" Width="120"/>
                                    <DataGridTextColumn Header="Percentage" Binding="{Binding Percentage}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Salary Range Analysis -->
                        <StackPanel Grid.Row="4" Margin="0,0,0,25">
                            <TextBlock Text="ðŸ’° Salary Range Analysis" FontSize="14" FontWeight="Bold"
                                       Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <DataGrid x:Name="dgSalaryRangeStats" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                                      GridLinesVisibility="Horizontal" BorderThickness="0" Background="Transparent"
                                      RowBackground="Transparent" AlternatingRowBackground="#F8F9FA">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Salary Range" Binding="{Binding SalaryRange}" Width="150"/>
                                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80"/>
                                    <DataGridTextColumn Header="Percentage" Binding="{Binding Percentage}" Width="100"/>
                                    <DataGridTextColumn Header="Staff Members" Binding="{Binding StaffNames}" Width="400"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Recent Joiners -->
                        <StackPanel Grid.Row="5" Margin="0,0,0,25">
                            <TextBlock Text="ðŸ†• Recent Joiners (Last 2 Years)" FontSize="14" FontWeight="Bold"
                                       Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <DataGrid x:Name="dgRecentJoiners" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                                      GridLinesVisibility="Horizontal" BorderThickness="0" Background="Transparent"
                                      RowBackground="Transparent" AlternatingRowBackground="#F8F9FA" MaxHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                                    <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="150"/>
                                    <DataGridTextColumn Header="Joining Date" Binding="{Binding FormattedJoiningDate}" Width="120"/>
                                    <DataGridTextColumn Header="Days Since Joined" Binding="{Binding DaysSinceJoined}" Width="150"/>
                                    <DataGridTextColumn Header="Monthly Salary" Binding="{Binding FormattedSalary}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Payroll Summary -->
                        <StackPanel Grid.Row="6" Margin="0,0,0,25">
                            <TextBlock Text="ðŸ’¸ Monthly Payroll Summary" FontSize="14" FontWeight="Bold"
                                       Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>

                            <Border Style="{StaticResource CardStyle}" Padding="20" Background="#F8F9FA">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Teachers Payroll" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="lblTeachersPayroll" Text="â‚¹0" FontSize="18" FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Support Staff Payroll" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="lblSupportStaffPayroll" Text="â‚¹0" FontSize="18" FontWeight="Bold"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Total Monthly Payroll" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="lblTotalPayroll" Text="â‚¹0" FontSize="18" FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25" Background="{StaticResource SecondaryDarkBrush}">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Ready" Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>