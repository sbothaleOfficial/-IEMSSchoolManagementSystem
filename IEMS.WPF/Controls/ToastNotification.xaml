<UserControl x:Class="IEMS.WPF.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ToastControl">
    <UserControl.Resources>
        <Storyboard x:Key="ShowToast">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="0,-100,0,0" To="0,20,0,0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="HideToast">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="0,20,0,0" To="0,-100,0,0" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="ToastBorder" Background="{Binding ToastBackground, ElementName=ToastControl}"
            CornerRadius="8" Padding="16,12" Margin="0,20,0,0"
            HorizontalAlignment="Center" VerticalAlignment="Top"
            Opacity="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="IconText" Text="{Binding ToastIcon, ElementName=ToastControl}"
                       FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"
                       Foreground="White"/>
            <TextBlock Text="{Binding Message, ElementName=ToastControl}"
                       FontSize="14" FontWeight="Medium" Foreground="White"
                       VerticalAlignment="Center" MaxWidth="300" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>