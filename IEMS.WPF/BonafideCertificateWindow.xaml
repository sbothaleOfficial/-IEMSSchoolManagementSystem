<Window x:Class="IEMS.WPF.BonafideCertificateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bonafide Certificate Generator" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Bonafide Certificate Generator"
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                   Foreground="#2C3E50" Margin="0,0,0,20"/>

        <!-- Certificate Preview -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border x:Name="CertificateBorder" Background="White" BorderBrush="#34495E"
                    BorderThickness="3" Padding="40" MinHeight="600">
                <StackPanel>
                    <!-- School Header -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- School Logo Placeholder -->
                        <Border Grid.Column="0" Background="#E8F4FD" Width="120" Height="120"
                                CornerRadius="60" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock Text="🏫" FontSize="48" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- School Details -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="INSPIRE ENGLISH MEDIUM SCHOOL, MARDI"
                                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Tah. Maregaon, Dist. Yavatmal (M.S.) – 445303"
                                       FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
                            <Grid HorizontalAlignment="Center" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="U-Dise Code : 27140806704"
                                           FontSize="12" Margin="0,0,40,0"/>
                                <TextBlock Grid.Column="1" Text="School Reg. No. MH-15381/16"
                                           FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- Separator Line -->
                    <Border Height="2" Background="#34495E" Margin="0,0,0,30"/>

                    <!-- Certificate Title -->
                    <TextBlock Text="BONAFIED CERTIFICATE" FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,40"
                               TextDecorations="Underline"/>

                    <!-- Certificate Content -->
                    <StackPanel Margin="40,0">
                        <TextBlock FontSize="16" LineHeight="28" TextWrapping="Wrap" Margin="0,0,0,10"
                                   TextAlignment="Justify" HorizontalAlignment="Stretch">
                            <Run Text="This is to Certify that "/>
                            <Run x:Name="StudentNameWithPrefix" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="S/O, D/O "/>
                            <Run x:Name="FatherNameRun" FontWeight="Bold"/>
                            <Run Text=" and Mother "/>
                            <Run x:Name="MotherNameRun" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="is a Bonafied Student of this School Since "/>
                            <Run x:Name="AdmissionDateRun" FontWeight="Bold"/>
                            <Run Text=" and now"/>
                            <LineBreak/>
                            <Run Text="He/She is Studying in Standard "/>
                            <Run x:Name="StandardRun" FontWeight="Bold"/>
                            <Run Text=" Her/She Reg./Roll.No. "/>
                            <Run x:Name="StudentNumberRun" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="The Date of Birth this Student as per Record is "/>
                            <Run x:Name="DateOfBirthRun" FontWeight="Bold"/>
                            <Run Text=" in"/>
                            <LineBreak/>
                            <Run Text="Words "/>
                            <Run x:Name="DateOfBirthInWordsRun" FontWeight="Bold"/>
                            <Run Text=". His/She Caste is "/>
                            <Run x:Name="CasteRun" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="and in Religion "/>
                            <Run x:Name="ReligionRun" FontWeight="Bold"/>
                            <Run Text=" According to School General Register."/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Footer -->
                    <Grid Margin="0,80,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Prepared by," FontSize="14" Margin="0,0,0,40"/>
                            <TextBlock Text="Date : " FontSize="14"/>
                            <TextBlock x:Name="PreparedDateRun" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Clark" FontSize="14" FontWeight="Bold"
                                       HorizontalAlignment="Center" Margin="0,60,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock Text="Principal" FontSize="14" FontWeight="Bold"
                                       HorizontalAlignment="Right" Margin="0,60,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Name="GenerateButton" Content="Generate Certificate" Width="150" Height="40"
                    Margin="0,0,10,0" Background="#3498DB" Foreground="White"
                    FontWeight="Bold" Click="GenerateButton_Click"/>
            <Button Name="PrintButton" Content="Print Certificate" Width="150" Height="40"
                    Margin="10,0,10,0" Background="#27AE60" Foreground="White"
                    FontWeight="Bold" Click="PrintButton_Click"/>
            <Button Name="CloseButton" Content="Close" Width="100" Height="40"
                    Margin="10,0,0,0" Background="#95A5A6" Foreground="White"
                    FontWeight="Bold" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>