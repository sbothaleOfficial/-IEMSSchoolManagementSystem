<Window x:Class="IEMS.WPF.ClassesManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Classes Management" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#2ECC71" Orientation="Horizontal" Height="60">
            <TextBlock Text="🏫" FontSize="30" Margin="20,0" VerticalAlignment="Center"/>
            <TextBlock Text="Classes Management System"
                       FontSize="20" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                <Button x:Name="btnAddClass" Content="Add Class" Width="100" Height="35" Margin="0,0,10,0"
                        Click="BtnAddClass_Click" Background="#2ECC71" Foreground="White" BorderThickness="0"/>
                <Button x:Name="btnEditClass" Content="Edit Class" Width="100" Height="35" Margin="0,0,10,0"
                        Click="BtnEditClass_Click" Background="#F39C12" Foreground="White" BorderThickness="0"/>
                <Button x:Name="btnDeleteClass" Content="Delete Class" Width="100" Height="35" Margin="0,0,10,0"
                        Click="BtnDeleteClass_Click" Background="#E74C3C" Foreground="White" BorderThickness="0"/>
                <Button x:Name="btnRefreshClasses" Content="Refresh" Width="100" Height="35" Margin="0,0,10,0"
                        Click="BtnRefreshClasses_Click" Background="#95A5A6" Foreground="White" BorderThickness="0"/>
                <Button x:Name="btnViewStudents" Content="View Students" Width="120" Height="35" Margin="10,0,10,0"
                        Click="BtnViewStudents_Click" Background="#3498DB" Foreground="White" BorderThickness="0"/>
            </StackPanel>

            <DataGrid x:Name="dgClasses" Grid.Row="1" AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      GridLinesVisibility="All" HeadersVisibility="Column" AlternatingRowBackground="#F8F9FA">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Class" Binding="{Binding DisplayName}" Width="120"/>
                    <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="150"/>
                    <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="120"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding TeacherEmail}" Width="200"/>
                    <DataGridTextColumn Header="Students" Binding="{Binding StudentCount}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25" Background="#34495E">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Ready" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>