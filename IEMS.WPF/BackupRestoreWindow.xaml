<Window x:Class="IEMS.WPF.BackupRestoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Backup &amp; Restore Management" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498DB" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnBack" Content="â† Back"
                            Click="BtnClose_Click"
                            Background="White" Foreground="Black" BorderBrush="#CCCCCC" BorderThickness="1"
                            Width="100" Height="35" Margin="0,0,20,0" FontWeight="SemiBold"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Database Backup &amp; Restore"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"/>
                        <TextBlock Text="Secure your school data with regular backups"
                                 FontSize="14"
                                 Foreground="White"
                                 Opacity="0.9"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="LastBackupText"
                             Text="Last Backup: Never"
                             Foreground="White"
                             VerticalAlignment="Center"
                             Margin="0,0,20,0"/>
                    <Border Background="White" CornerRadius="15" Padding="10,5">
                        <TextBlock x:Name="DatabaseSizeText"
                                 Text="Database Size: 0 MB"
                                 Foreground="#3498DB"
                                 FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Manual Backup Tab -->
            <TabItem Header="Manual Backup">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Create Backup" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Quick Actions -->
                    <Border Grid.Row="1" Background="#ECF0F1" CornerRadius="8" Padding="20" Margin="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" x:Name="BackupToDesktopButton"
                                    Content="ğŸ“ Backup to Desktop"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#27AE60"
                                    Foreground="White"
                                    Margin="5"
                                    Click="BackupToDesktopButton_Click"/>

                            <Button Grid.Column="1" x:Name="BackupToCustomButton"
                                    Content="ğŸ“‚ Backup to Custom Location"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#3498DB"
                                    Foreground="White"
                                    Margin="5"
                                    Click="BackupToCustomButton_Click"/>

                            <Button Grid.Column="2" x:Name="OpenBackupFolderButton"
                                    Content="ğŸ“‚ Open Backup Folder"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    Margin="5"
                                    Click="OpenBackupFolderButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Backup Options -->
                    <GroupBox Grid.Row="2" Header="Backup Options" Margin="0,10">
                        <StackPanel Margin="10">
                            <CheckBox x:Name="CompressBackupCheckBox"
                                    Content="Compress backup file (smaller size)"
                                    Margin="5"/>
                            <CheckBox x:Name="IncludeTimestampCheckBox"
                                    Content="Include timestamp in filename"
                                    IsChecked="True"
                                    Margin="5"/>
                            <CheckBox x:Name="VerifyBackupCheckBox"
                                    Content="Verify backup after creation"
                                    IsChecked="True"
                                    Margin="5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Status Panel -->
                    <Border Grid.Row="3" Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="BackupStatusText"
                                     Text="Ready to create backup..."
                                     FontSize="12"
                                     Foreground="#7F8C8D"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Restore Tab -->
            <TabItem Header="Restore">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Restore Database" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Restore Options -->
                    <Border Grid.Row="1" Background="#FEF5E7" CornerRadius="8" Padding="15" Margin="0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="âš ï¸" FontSize="20" Foreground="#F39C12" Margin="0,0,10,0"/>
                                <TextBlock Text="Warning: Restoring will replace all current data with the backup data."
                                         FontWeight="SemiBold"
                                         Foreground="#E67E22"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="30,10,0,0">
                                <Button x:Name="SelectBackupFileButton"
                                        Content="ğŸ“ Select Backup File"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#E74C3C"
                                        Foreground="White"
                                        Width="200"
                                        Click="SelectBackupFileButton_Click"/>

                                <TextBlock x:Name="SelectedBackupFileText"
                                         Text="No file selected"
                                         VerticalAlignment="Center"
                                         Margin="20,0,0,0"
                                         FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Restore Validation -->
                    <GroupBox Grid.Row="2" Header="Pre-Restore Checks" Margin="0,10">
                        <StackPanel Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="âœ“" Foreground="Green" Margin="5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ValidationFileExistsText" Text="Backup file exists" Margin="5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="âœ“" Foreground="Green" Margin="5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ValidationFileValidText" Text="Valid SQLite database" Margin="5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="âœ“" Foreground="Green" Margin="5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ValidationSafetyBackupText" Text="Safety backup will be created" Margin="5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="â„¹" Foreground="Blue" Margin="5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ValidationFileDateText" Text="Backup date: Not selected" Margin="5"/>
                            </Grid>

                            <Button x:Name="RestoreButton"
                                    Content="ğŸ”„ Restore Database"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    Width="200"
                                    Margin="0,15,0,0"
                                    IsEnabled="False"
                                    Click="RestoreButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Restore Status -->
                    <Border Grid.Row="3" Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="RestoreStatusText"
                                     Text="Select a backup file to restore..."
                                     FontSize="12"
                                     Foreground="#7F8C8D"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Automatic Backup Tab -->
            <TabItem Header="Automatic Backup">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Automatic Backup Schedule" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Schedule Settings -->
                    <GroupBox Grid.Row="1" Header="Backup Schedule" Margin="0,10">
                        <StackPanel Margin="10">
                            <CheckBox x:Name="EnableDailyBackupCheckBox"
                                    Content="Daily Backup"
                                    Margin="5"
                                    Checked="BackupScheduleChanged"
                                    Unchecked="BackupScheduleChanged"/>

                            <StackPanel Orientation="Horizontal" Margin="25,5">
                                <TextBlock Text="Time:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="DailyBackupTimeComboBox" Width="150">
                                    <ComboBoxItem>6:00 AM</ComboBoxItem>
                                    <ComboBoxItem>12:00 PM</ComboBoxItem>
                                    <ComboBoxItem IsSelected="True">6:00 PM</ComboBoxItem>
                                    <ComboBoxItem>9:00 PM</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <CheckBox x:Name="EnableWeeklyBackupCheckBox"
                                    Content="Weekly Backup"
                                    Margin="5"
                                    Checked="BackupScheduleChanged"
                                    Unchecked="BackupScheduleChanged"/>

                            <StackPanel Orientation="Horizontal" Margin="25,5">
                                <TextBlock Text="Day:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="WeeklyBackupDayComboBox" Width="150">
                                    <ComboBoxItem>Sunday</ComboBoxItem>
                                    <ComboBoxItem>Monday</ComboBoxItem>
                                    <ComboBoxItem>Tuesday</ComboBoxItem>
                                    <ComboBoxItem>Wednesday</ComboBoxItem>
                                    <ComboBoxItem>Thursday</ComboBoxItem>
                                    <ComboBoxItem IsSelected="True">Friday</ComboBoxItem>
                                    <ComboBoxItem>Saturday</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <CheckBox x:Name="EnableMonthlyBackupCheckBox"
                                    Content="Monthly Backup"
                                    Margin="5"
                                    Checked="BackupScheduleChanged"
                                    Unchecked="BackupScheduleChanged"/>

                            <StackPanel Orientation="Horizontal" Margin="25,5">
                                <TextBlock Text="Day of Month:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="MonthlyBackupDayComboBox" Width="150">
                                    <ComboBoxItem IsSelected="True">1st</ComboBoxItem>
                                    <ComboBoxItem>15th</ComboBoxItem>
                                    <ComboBoxItem>Last Day</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <Separator Margin="0,10"/>

                            <CheckBox x:Name="EnableIncrementalBackupCheckBox"
                                    Content="Enable Incremental Backups (smaller, frequent backups)"
                                    Margin="5"
                                    Checked="BackupScheduleChanged"
                                    Unchecked="BackupScheduleChanged"/>

                            <Button x:Name="SaveScheduleButton"
                                    Content="ğŸ’¾ Save Schedule"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#27AE60"
                                    Foreground="White"
                                    Width="200"
                                    Margin="5,15"
                                    Click="SaveScheduleButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Retention Policy -->
                    <GroupBox Grid.Row="2" Header="Retention Policy" Margin="0,10">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Daily backups kept for:" Margin="5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="7 days" FontWeight="SemiBold" Margin="5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Weekly backups kept for:" Margin="5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="30 days" FontWeight="SemiBold" Margin="5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Monthly backups kept for:" Margin="5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="1 year" FontWeight="SemiBold" Margin="5"/>
                        </Grid>
                    </GroupBox>

                    <!-- Next Backup Info -->
                    <Border Grid.Row="3" Background="#E8F8F5" CornerRadius="8" Padding="15" Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="Next Scheduled Backups:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="NextBackupInfoText"
                                     Text="No automatic backups scheduled"
                                     FontStyle="Italic"
                                     Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- History Tab -->
            <TabItem Header="Backup History">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Backup History" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- History DataGrid -->
                    <DataGrid Grid.Row="1" x:Name="BackupHistoryDataGrid"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            IsReadOnly="True"
                            Margin="0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date &amp; Time" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding FileSizeFormatted}" Width="80"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding BackupPath}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="ğŸ“‚ Open"
                                                    Tag="{Binding BackupPath}"
                                                    Click="OpenBackupLocation_Click"
                                                    Margin="2"
                                                    Padding="5,2"/>
                                            <Button Content="ğŸ”„ Restore"
                                                    Tag="{Binding BackupPath}"
                                                    Click="RestoreFromHistory_Click"
                                                    Margin="2"
                                                    Padding="5,2"/>
                                            <Button Content="ğŸ—‘ï¸ Delete"
                                                    Tag="{Binding}"
                                                    Click="DeleteBackup_Click"
                                                    Margin="2"
                                                    Padding="5,2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- History Summary -->
                    <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="8" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" x:Name="TotalBackupsText" Text="Total Backups: 0"/>
                            <TextBlock Grid.Column="1" x:Name="TotalSizeText" Text="Total Size: 0 MB" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" x:Name="OldestBackupText" Text="Oldest: N/A" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>