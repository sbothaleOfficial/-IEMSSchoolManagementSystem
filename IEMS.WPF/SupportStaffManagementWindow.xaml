<Window x:Class="IEMS.WPF.SupportStaffManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Support Staff Management" Height="700" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="{StaticResource SecondaryBrush}" Orientation="Horizontal" Height="60">
            <TextBlock Text="👨‍💼" FontSize="30" Margin="20,0" VerticalAlignment="Center"/>
            <TextBlock Text="Support Staff Management System"
                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextOnPrimaryBrush}"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                <Button x:Name="btnAddStaff" Content="Add Staff" Width="120" Height="35" Margin="0,0,10,0"
                        Click="BtnAddStaff_Click" Style="{StaticResource SuccessButtonStyle}"/>
                <Button x:Name="btnEditStaff" Content="Edit Staff" Width="120" Height="35" Margin="0,0,10,0"
                        Click="BtnEditStaff_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                <Button x:Name="btnDeleteStaff" Content="Delete Staff" Width="130" Height="35" Margin="0,0,10,0"
                        Click="BtnDeleteStaff_Click" Style="{StaticResource DangerButtonStyle}"/>
                <Button x:Name="btnRefresh" Content="Refresh" Width="100" Height="35" Margin="0,0,10,0"
                        Click="BtnRefresh_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                <Button x:Name="btnClearSearch" Content="Clear Search" Width="130" Height="35" Margin="0,0,10,0"
                        Click="BtnClearSearch_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                <Separator Width="20"/>
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox x:Name="txtSearch" Width="200" Height="25" VerticalAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"
                         ToolTip="Search by name, employee ID, position, or phone"/>
            </StackPanel>

            <!-- Filter Options -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Filter by:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <TextBlock Text="Position:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbPositionFilter" Width="120" Height="25" Margin="0,0,20,0"
                          SelectionChanged="CmbPositionFilter_SelectionChanged"/>
            </StackPanel>

            <!-- Staff DataGrid -->
            <DataGrid x:Name="dgStaff" Grid.Row="2" AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      GridLinesVisibility="All" HeadersVisibility="Column" AlternatingRowBackground="{StaticResource SurfaceBrush}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="150"/>
                    <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="120"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                    <DataGridTextColumn Header="Date of Birth" Binding="{Binding FormattedDateOfBirth}" Width="120"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                    <DataGridTextColumn Header="Salary" Binding="{Binding FormattedSalary}" Width="100"/>
                    <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="30" Background="{StaticResource SecondaryDarkBrush}">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Ready" Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="lblTotalStaff" Text="Total: 0" Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>