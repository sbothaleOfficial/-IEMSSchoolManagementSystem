    <UseWPF>true</UseWPF>
    <ApplicationIcon>exact_color.ico</ApplicationIcon>
    <AssemblyName>IEMS</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\IEMS.Core\IEMS.Core.csproj" />
