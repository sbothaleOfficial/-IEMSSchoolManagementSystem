<Window x:Class="IEMS.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IEMS - Login" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Icon="New_round_logo_new_color.png"
        Background="{StaticResource SurfaceBrush}">

    <Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - School Branding -->
            <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- School Information Card -->
                    <Border Grid.Row="1" Background="White" CornerRadius="20"
                            Margin="50" Padding="40"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center">

                            <!-- School Logo -->
                            <Image Source="Exact_color_logo.png" Width="150" Height="150"
                                   Margin="0,0,0,30"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   RenderOptions.EdgeMode="Aliased"
                                   Stretch="Uniform"/>

                            <!-- School Name -->
                            <TextBlock Text="Inspire English Medium School, Mardi"
                                       FontSize="28" FontWeight="Bold"
                                       TextAlignment="Center"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,15"
                                       TextWrapping="Wrap"/>

                            <!-- School Address -->
                            <TextBlock Text="Tah. Maregaon, Dist. Yavatmal (Maharashtra) â€“ 445303"
                                       FontSize="16"
                                       TextAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,20"
                                       TextWrapping="Wrap"/>

                            <!-- School Details -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="U-Dise Code" FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              TextAlignment="Center"/>
                                    <TextBlock Text="27140806704" FontSize="14" FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="School Reg. No." FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              TextAlignment="Center"/>
                                    <TextBlock Text="MH-15381/16" FontSize="14" FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Tagline -->
                            <Border Background="{StaticResource PrimaryBrush}"
                                    CornerRadius="15" Padding="20,10" Margin="0,20,0,0">
                                <TextBlock Text="ðŸ“š Excellence in Education â€¢ ðŸŒŸ Inspiring Future Leaders"
                                           FontSize="14" FontStyle="Italic" FontWeight="SemiBold"
                                           TextAlignment="Center"
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Side - Login Form -->
            <Border Grid.Column="1" Background="White" Padding="50">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Login Form -->
                    <StackPanel Grid.Row="1" MaxWidth="300">

                        <!-- Welcome Header -->
                        <TextBlock Text="Welcome Back!" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextAlignment="Center" Margin="0,0,0,10"/>

                        <TextBlock Text="Please sign in to access the school management system"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextAlignment="Center" Margin="0,0,0,40"/>

                        <!-- Username Field -->
                        <TextBlock Text="Username" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="15,12" Margin="0,0,0,20">
                            <TextBox x:Name="txtUsername" FontSize="14" Background="Transparent"
                                     BorderThickness="0" VerticalAlignment="Center"
                                     Text="admin"/>
                        </Border>

                        <!-- Password Field -->
                        <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="15,12" Margin="0,0,0,10">
                            <PasswordBox x:Name="txtPassword" FontSize="14" Background="Transparent"
                                         BorderThickness="0" VerticalAlignment="Center"
                                         Password="admin123"/>
                        </Border>

                        <!-- Remember Me -->
                        <CheckBox x:Name="chkRememberMe" Content="Remember me"
                                  FontSize="12" Margin="0,0,0,30"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>

                        <!-- Login Button -->
                        <Button x:Name="btnLogin" Content="Sign In"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Height="45" FontSize="16" FontWeight="SemiBold"
                                Margin="0,0,0,20" Click="BtnLogin_Click"/>

                        <!-- Error Message -->
                        <TextBlock x:Name="txtErrorMessage" FontSize="12"
                                   Foreground="Red" TextAlignment="Center"
                                   Visibility="Collapsed" Margin="0,0,0,20"/>

                        <!-- Additional Options -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Need help? " FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="Contact Administrator" FontSize="12"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       TextDecorations="Underline" Cursor="Hand"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="White" CornerRadius="10" Padding="30">
                    <StackPanel>
                        <ProgressBar IsIndeterminate="True" Height="4" Margin="0,0,0,15"/>
                        <TextBlock Text="Signing you in..." FontSize="14"
                                   TextAlignment="Center"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>

</Window>