<Window x:Class="IEMS.WPF.AddEditTransportExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transport Expense Management" Height="700" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#E74C3C" Height="60">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Border Background="#C0392B" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                    <TextBlock Text="ðŸ’°" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="lblWindowTitle" Text="Add Transport Expense"
                               FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Enter expense details"
                               FontSize="12" Foreground="LightGray"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                <!-- Validation Message -->
                <Border x:Name="borderValidation" Background="#FFE6E6" BorderBrush="#FF6B6B"
                        BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblValidationMessage" Text="Validation Error"
                                   FontSize="14" Foreground="#CC0000" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Vehicle Selection -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Vehicle *" FontWeight="Bold" FontSize="14"
                               Foreground="#2C3E50" Margin="0,0,0,8"/>
                    <ComboBox x:Name="cmbVehicle" Height="35" FontSize="14"
                              BorderBrush="#BDC3C7" BorderThickness="2"
                              DisplayMemberPath="DisplayText" SelectedValuePath="Id"/>
                </StackPanel>

                <!-- Category and Fuel Type -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Category -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Category *" FontWeight="Bold" FontSize="14"
                                   Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cmbCategory" Height="35" FontSize="14"
                                  BorderBrush="#BDC3C7" BorderThickness="2"
                                  DisplayMemberPath="Display" SelectedValuePath="Value"
                                  SelectionChanged="CmbCategory_SelectionChanged"/>
                    </StackPanel>

                    <!-- Fuel Type -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Fuel Type" FontWeight="Bold" FontSize="14"
                                   Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cmbFuelType" Height="35" FontSize="14"
                                  BorderBrush="#BDC3C7" BorderThickness="2"
                                  DisplayMemberPath="Display" SelectedValuePath="Value"/>
                    </StackPanel>
                </Grid>

                <!-- Amount and Quantity -->
                <Border Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Amount &amp; Quantity Details" FontSize="16" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Amount -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Amount (â‚¹) *" FontWeight="Bold" FontSize="14"
                                           Foreground="#2C3E50" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtAmount" Height="35" FontSize="14"
                                         BorderBrush="#BDC3C7" BorderThickness="2" Padding="10"
                                         TextChanged="AmountQuantity_TextChanged"/>
                            </StackPanel>

                            <!-- Quantity -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Quantity *" FontWeight="Bold" FontSize="14"
                                           Foreground="#2C3E50" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtQuantity" Height="35" FontSize="14"
                                         BorderBrush="#BDC3C7" BorderThickness="2" Padding="10"
                                         TextChanged="AmountQuantity_TextChanged"/>
                            </StackPanel>

                            <!-- Price per Unit (Calculated) -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Price per Unit" FontWeight="Bold" FontSize="14"
                                           Foreground="#2C3E50" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtPricePerUnit" Height="35" FontSize="14"
                                         BorderBrush="#BDC3C7" BorderThickness="2" Padding="10"
                                         IsReadOnly="True" Background="#F8F9FA"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Price per unit is automatically calculated: Amount Ã· Quantity"
                                   FontSize="11" Foreground="Gray" Margin="0,8,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Date and Driver -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Expense Date -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Expense Date *" FontWeight="Bold" FontSize="14"
                                   Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <DatePicker x:Name="dpExpenseDate" Height="35" FontSize="14"
                                    BorderBrush="#BDC3C7" BorderThickness="2"/>
                    </StackPanel>

                    <!-- Driver Name -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Driver Name" FontWeight="Bold" FontSize="14"
                                   Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtDriverName" Height="35" FontSize="14"
                                 BorderBrush="#BDC3C7" BorderThickness="2" Padding="10"/>
                    </StackPanel>
                </Grid>

                <!-- Description -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Description" FontWeight="Bold" FontSize="14"
                               Foreground="#2C3E50" Margin="0,0,0,8"/>
                    <TextBox x:Name="txtDescription" Height="60" FontSize="14"
                             BorderBrush="#BDC3C7" BorderThickness="2" Padding="10"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    <TextBlock Text="e.g., Fuel refill at City Petrol Pump" FontSize="11" Foreground="Gray" Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Invoice Number -->
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="Invoice/Bill Number" FontWeight="Bold" FontSize="14"
                               Foreground="#2C3E50" Margin="0,0,0,8"/>
                    <TextBox x:Name="txtInvoiceNumber" Height="35" FontSize="14"
                             BorderBrush="#BDC3C7" BorderThickness="2" Padding="10"/>
                    <TextBlock Text="e.g., INV-2024-001" FontSize="11" Foreground="Gray" Margin="0,3,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="Cancel"
                        Background="#95A5A6" Foreground="White" BorderThickness="0"
                        Height="40" Width="100" Margin="0,0,10,0" Click="BtnCancel_Click"
                        Style="{DynamicResource ModernButtonStyle}"/>
                <Button x:Name="btnSave" Content="Save Expense"
                        Background="#27AE60" Foreground="White" BorderThickness="0"
                        Height="40" Width="120" Click="BtnSave_Click"
                        Style="{DynamicResource ModernButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
</Window>