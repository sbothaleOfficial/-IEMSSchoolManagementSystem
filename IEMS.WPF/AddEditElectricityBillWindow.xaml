<Window x:Class="IEMS.WPF.AddEditElectricityBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electricity Bill" Height="300" Width="450" MinHeight="250" MinWidth="400"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Style="{StaticResource ModernWindowStyle}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="lblTitle" Text="Add Electricity Bill" FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
            <TextBlock Text="Simple electricity bill entry - just Bill Date and Amount" FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="30" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bill Date -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Bill Date:" VerticalAlignment="Center"
                           Margin="0,0,15,20" FontWeight="SemiBold"/>
                <DatePicker Grid.Row="0" Grid.Column="1" x:Name="dpBillDate" Margin="0,0,0,20"
                            Style="{StaticResource ModernDatePickerStyle}" Height="35"/>

                <!-- Total Amount -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Amount:" VerticalAlignment="Center"
                           Margin="0,0,15,0" FontWeight="SemiBold"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="â‚¹" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"
                               Margin="0,0,5,0" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBox x:Name="txtAmount" Width="200" Height="35"
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" x:Name="btnSave" Content="Save" Width="100" Height="35" Margin="0,0,10,0"
                    Click="BtnSave_Click" Style="{StaticResource PrimaryButtonStyle}" FontWeight="SemiBold"/>
            <Button Grid.Column="2" x:Name="btnCancel" Content="Cancel" Width="100" Height="35"
                    Click="BtnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
        </Grid>
    </Grid>
</Window>