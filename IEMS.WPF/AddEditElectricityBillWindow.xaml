<Window x:Class="IEMS.WPF.AddEditElectricityBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electricity Bill" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource ModernWindowStyle}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="lblTitle" Text="Add Electricity Bill" FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bill Number -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Bill Number:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtBillNumber" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}"/>

                <!-- Month and Year -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Month:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbMonth" Margin="0,0,0,10" Style="{StaticResource ModernComboBoxStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Year:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbYear" Margin="0,0,0,10" Style="{StaticResource ModernComboBoxStyle}"/>

                <!-- Units and Rate -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Units Consumed:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtUnits" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}" TextChanged="TxtUnits_TextChanged"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Rate per Unit:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtUnitsRate" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}" TextChanged="TxtUnitsRate_TextChanged"/>

                <!-- Amount -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Total Amount:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtAmount" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}"/>

                <!-- Due Date -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Due Date:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <DatePicker Grid.Row="6" Grid.Column="1" x:Name="dpDueDate" Margin="0,0,0,10" Style="{StaticResource ModernDatePickerStyle}"/>

                <!-- Payment Status -->
                <TextBlock Grid.Row="7" Grid.Column="0" Text="Payment Status:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <CheckBox Grid.Row="7" Grid.Column="1" x:Name="chkIsPaid" Content="Paid" Margin="0,0,0,10"
                          Style="{StaticResource ModernCheckBoxStyle}" Checked="ChkIsPaid_Checked" Unchecked="ChkIsPaid_Unchecked"/>

                <!-- Payment Details Panel -->
                <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" x:Name="pnlPaymentDetails" Visibility="Collapsed" Margin="0,10,0,10">
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="5" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Payment Details" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource TextPrimaryBrush}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Paid Date:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dpPaidDate" Margin="0,0,0,10" Style="{StaticResource ModernDatePickerStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Payment Method:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbPaymentMethod" Margin="0,0,0,10" Style="{StaticResource ModernComboBoxStyle}" SelectionChanged="CmbPaymentMethod_SelectionChanged"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Transaction ID:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtTransactionId" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Bank Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtBankName" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Cheque Number:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtChequeNumber" Margin="0,0,0,10" Style="{StaticResource ModernTextBoxStyle}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Notes -->
                <TextBlock Grid.Row="9" Grid.Column="0" Text="Notes:" VerticalAlignment="Top" Margin="0,0,10,10"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="txtNotes" Height="60" Margin="0,0,0,10"
                         Style="{StaticResource ModernTextBoxStyle}" TextWrapping="Wrap" AcceptsReturn="True"/>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" x:Name="btnSave" Content="Save" Width="80" Height="35" Margin="0,0,10,0"
                    Click="BtnSave_Click" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Grid.Column="2" x:Name="btnCancel" Content="Cancel" Width="80" Height="35"
                    Click="BtnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
        </Grid>
    </Grid>
</Window>