<Window x:Class="IEMS.WPF.AddEditOtherExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Other Expense" Height="500" Width="500" MinHeight="400" MinWidth="450"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Style="{StaticResource ModernWindowStyle}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="lblTitle" Text="Add Other Expense" FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="30" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Category -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Category:" VerticalAlignment="Center"
                           Margin="0,0,15,20" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbCategory" Margin="0,0,0,20"
                          Style="{StaticResource ModernComboBoxStyle}" Height="35"/>

                <!-- Description (Optional) -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                    <TextBlock Text="Description:" VerticalAlignment="Top" FontWeight="SemiBold"/>
                    <TextBlock Text="(Optional)" FontSize="10" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDescription" Height="60" Margin="0,0,0,20"
                         Style="{StaticResource ModernTextBoxStyle}" TextWrapping="Wrap" AcceptsReturn="True"/>

                <!-- Amount -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Amount:" VerticalAlignment="Center"
                           Margin="0,0,15,20" FontWeight="SemiBold"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="â‚¹" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"
                               Margin="0,0,5,0" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBox x:Name="txtAmount" Width="200" Height="35"
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Expense Date -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Expense Date:" VerticalAlignment="Center"
                           Margin="0,0,15,20" FontWeight="SemiBold"/>
                <DatePicker Grid.Row="3" Grid.Column="1" x:Name="dpExpenseDate" Margin="0,0,0,20"
                            Style="{StaticResource ModernDatePickerStyle}" Height="35"/>

                <!-- Payment Method -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Payment Method:" VerticalAlignment="Center"
                           Margin="0,0,15,20" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbPaymentMethod" Margin="0,0,0,20"
                          Style="{StaticResource ModernComboBoxStyle}" Height="35"
                          SelectionChanged="CmbPaymentMethod_SelectionChanged"/>

                <!-- Payment Details -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Payment Details:" VerticalAlignment="Top"
                           Margin="0,0,15,0" FontWeight="SemiBold"/>
                <Border Grid.Row="5" Grid.Column="1" Background="{StaticResource BackgroundBrush}"
                        CornerRadius="5" Padding="15" Margin="0,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Transaction ID:" VerticalAlignment="Center" Margin="0,0,10,10" FontSize="12"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtTransactionId" Margin="0,0,0,10"
                                 Style="{StaticResource ModernTextBoxStyle}" Height="35"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Bank Name:" VerticalAlignment="Center" Margin="0,0,10,10" FontSize="12"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtBankName" Margin="0,0,0,10"
                                 Style="{StaticResource ModernTextBoxStyle}" Height="35"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Cheque Number:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtChequeNumber" Margin="0,0,0,0"
                                 Style="{StaticResource ModernTextBoxStyle}" Height="35"/>
                    </Grid>
                </Border>
            </Grid>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" x:Name="btnSave" Content="Save" Width="100" Height="35" Margin="0,0,10,0"
                    Click="BtnSave_Click" Style="{StaticResource PrimaryButtonStyle}" FontWeight="SemiBold"/>
            <Button Grid.Column="2" x:Name="btnCancel" Content="Cancel" Width="100" Height="35"
                    Click="BtnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
        </Grid>
    </Grid>
</Window>