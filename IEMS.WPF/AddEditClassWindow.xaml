<Window x:Class="IEMS.WPF.AddEditClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Class" Height="350" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Class Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Class Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtClassName" Grid.Column="1" Height="25" VerticalAlignment="Center" MaxLength="50"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Section:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSection" Grid.Column="1" Height="25" VerticalAlignment="Center" MaxLength="10"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Teacher:" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbTeacher" Grid.Column="1" Height="25" VerticalAlignment="Center"
                      DisplayMemberPath="DisplayName" SelectedValuePath="Id"/>
        </Grid>

        <TextBlock x:Name="lblValidation" Grid.Row="4" Foreground="Red" FontWeight="Bold"
                   Visibility="Collapsed" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" Width="80" Height="30" Margin="0,0,10,0"
                    Click="BtnSave_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30"
                    Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>